<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp">

    <TextView
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="#ff4081"
        android:scaleType="center"
        android:text="새로운 연락처"
        android:gravity="center"
        android:textSize="30dp"
        android:layout_marginBottom="10dp"
        android:textColor="#ffffff"/>

    <TextView
        android:id="@+id/tvName"
        android:text="이름 : "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_below="@+id/top"
        android:textSize="30dp"/>

    <EditText
        android:id="@+id/editName"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tvName"
        android:layout_toRightOf="@+id/tvName"/>

    <TextView
        android:id="@+id/tvNaesun"
        android:text="내선 : "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/editName"
        android:layout_below="@+id/top"
        android:textSize="30dp"/>

    <EditText
        android:id="@+id/editNaesun"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tvNaesun"
        android:layout_toRightOf="@+id/tvNaesun"
        android:inputType="number"/>

    <TextView
        android:id="@+id/tvNumber"
        android:text="전화번호 : "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvName"
        android:layout_marginBottom="10dp"
        android:textSize="30dp"/>

    <EditText
        android:id="@+id/editNumber"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tvNumber"
        android:layout_toRightOf="@+id/tvNumber"
        android:layout_below="@+id/tvNaesun"
        android:inputType="number"/>

    <TextView
        android:id="@+id/tvEmail"
        android:text="이메일 : "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvNumber"
        android:layout_marginBottom="10dp"
        android:textSize="30dp"/>

    <EditText
        android:id="@+id/editEmail"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/tvEmail"
        android:layout_alignBaseline="@+id/tvEmail"
        android:layout_below="@+id/editNumber"/>

    <TextView
        android:id="@+id/tvDepart"
        android:text="부서 : "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvEmail"

        android:textSize="30dp"/>

    <EditText
        android:id="@+id/editDepart"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/tvDepart"
        android:layout_alignBaseline="@+id/tvDepart" />

</RelativeLayout>